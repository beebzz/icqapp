#main
  .card
    .card-body
      -if @poll
        %h3.card-title= @question.qname 
        %h4.card-subtitle= @question.prompt
        -if @question.image.attached?
          .card-img-top= image_tag @question.image.variant(resize: "480x480^"), :class => "imgwide"
        %hr
        .card-text
          =form_for @response, :method => :post, :url => course_question_poll_poll_responses_path(@course, @question, @poll) do 
            .form-group
              =question_input(@question, @current) 
              =submit_tag "Submit answer" 
      -else
        %h3.card-title
          %span= octicon "watch", :height => 32
          %span Hang on ... 
        %p.card-text no question is active right now

  %br
  %p#refresh= link_to "Refresh", course_path(@course), :class => "btn btn-primary"

  #bottom

